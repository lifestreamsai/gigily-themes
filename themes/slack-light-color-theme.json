{
  "$schema": "vscode://schemas/color-theme",
  "name": "Gigily Slack Light",
  "type": "light",
  "colors": {
    // Base colors
    "foreground": "#1D1C1D",
    "focusBorder": "#1264A3",
    "selection.background": "#1264A3AA",
    "descriptionForeground": "#616061",
    "errorForeground": "#E01E5A",
    "icon.foreground": "#616061",

    // Activity Bar (Slack aubergine)
    "activityBar.background": "#4A154B",
    "activityBar.foreground": "#FFFFFF",
    "activityBar.inactiveForeground": "#FFFFFFAA",
    "activityBar.border": "#3F0E40",
    "activityBar.activeBorder": "#FFFFFF",
    "activityBarBadge.background": "#E01E5A",
    "activityBarBadge.foreground": "#FFFFFF",

    // Side Bar
    "sideBar.background": "#F8F8F8",
    "sideBar.foreground": "#1D1C1D",
    "sideBar.border": "#DDDDDD",
    "sideBarTitle.foreground": "#616061",
    "sideBarSectionHeader.background": "#F0F0F0",
    "sideBarSectionHeader.foreground": "#1D1C1D",
    "sideBarSectionHeader.border": "#DDDDDD",

    // Lists and Trees
    "list.activeSelectionBackground": "#1164A3",
    "list.activeSelectionForeground": "#FFFFFF",
    "list.inactiveSelectionBackground": "#E8E8E8",
    "list.inactiveSelectionForeground": "#1D1C1D",
    "list.hoverBackground": "#F0F0F0",
    "list.hoverForeground": "#1D1C1D",
    "list.focusBackground": "#1164A3",
    "list.focusForeground": "#FFFFFF",
    "list.highlightForeground": "#1264A3",
    "list.dropBackground": "#E8E8E8",

    // Editor
    "editor.background": "#FFFFFF",
    "editor.foreground": "#1D1C1D",
    "editor.lineHighlightBackground": "#F8F8F8",
    "editor.lineHighlightBorder": "#F8F8F8",
    "editor.selectionBackground": "#1164A344",
    "editor.selectionHighlightBackground": "#E8D5E833",
    "editor.wordHighlightBackground": "#E8D5E844",
    "editor.wordHighlightStrongBackground": "#1164A344",
    "editor.findMatchBackground": "#36C5F044",
    "editor.findMatchHighlightBackground": "#ECB22E44",
    "editor.findRangeHighlightBackground": "#F0F0F066",
    "editor.hoverHighlightBackground": "#1164A333",
    "editor.rangeHighlightBackground": "#00000008",
    "editorCursor.foreground": "#4A154B",
    "editorWhitespace.foreground": "#CCCCCC",
    "editorIndentGuide.background1": "#E0E0E0",
    "editorIndentGuide.activeBackground1": "#CCCCCC",
    "editorLineNumber.foreground": "#999999",
    "editorLineNumber.activeForeground": "#1D1C1D",
    "editorRuler.foreground": "#CCCCCC",
    "editorBracketMatch.background": "#1164A333",
    "editorBracketMatch.border": "#1164A3",

    // Editor Groups & Tabs
    "editorGroup.border": "#DDDDDD",
    "editorGroupHeader.tabsBackground": "#F8F8F8",
    "editorGroupHeader.tabsBorder": "#F8F8F8",
    "tab.activeBackground": "#FFFFFF",
    "tab.activeForeground": "#1D1C1D",
    "tab.activeBorderTop": "#4A154B",
    "tab.inactiveBackground": "#F8F8F8",
    "tab.inactiveForeground": "#616061",
    "tab.border": "#F0F0F0",
    "tab.hoverBackground": "#FFFFFF",
    "tab.hoverBorder": "#4A154B",

    // Editor Widget
    "editorWidget.background": "#F8F8F8",
    "editorWidget.border": "#DDDDDD",
    "editorSuggestWidget.background": "#F8F8F8",
    "editorSuggestWidget.border": "#DDDDDD",
    "editorSuggestWidget.foreground": "#1D1C1D",
    "editorSuggestWidget.highlightForeground": "#1264A3",
    "editorSuggestWidget.selectedBackground": "#1164A3",
    "editorSuggestWidget.selectedForeground": "#FFFFFF",
    "editorHoverWidget.background": "#F8F8F8",
    "editorHoverWidget.border": "#DDDDDD",

    // Status Bar
    "statusBar.background": "#4A154B",
    "statusBar.foreground": "#FFFFFF",
    "statusBar.border": "#3F0E40",
    "statusBar.noFolderBackground": "#4A154B",
    "statusBar.debuggingBackground": "#ECB22E",
    "statusBar.debuggingForeground": "#1D1C1D",
    "statusBarItem.activeBackground": "#FFFFFF33",
    "statusBarItem.hoverBackground": "#FFFFFF22",
    "statusBarItem.prominentBackground": "#3F0E40",
    "statusBarItem.prominentHoverBackground": "#611F69",
    "statusBarItem.remoteBackground": "#4A154B",
    "statusBarItem.remoteForeground": "#FFFFFF",

    // Title Bar
    "titleBar.activeBackground": "#4A154B",
    "titleBar.activeForeground": "#FFFFFF",
    "titleBar.inactiveBackground": "#611F69",
    "titleBar.inactiveForeground": "#FFFFFFAA",
    "titleBar.border": "#3F0E40",

    // Command Center
    "commandCenter.background": "#E8D5E8",
    "commandCenter.foreground": "#3F0E40",
    "commandCenter.border": "#3F0E40",
    "commandCenter.activeBackground": "#D9C2D9",
    "commandCenter.activeForeground": "#3F0E40",
    "commandCenter.activeBorder": "#4A154B",
    "commandCenter.inactiveForeground": "#3F0E40",

    // Menu
    "menu.background": "#FFFFFF",
    "menu.foreground": "#1D1C1D",
    "menu.selectionBackground": "#1164A3",
    "menu.selectionForeground": "#FFFFFF",
    "menu.separatorBackground": "#DDDDDD",
    "menu.border": "#DDDDDD",

    // Terminal (Slack colors)
    "terminal.background": "#FFFFFF",
    "terminal.foreground": "#1D1C1D",
    "terminal.ansiBlack": "#1D1C1D",
    "terminal.ansiRed": "#E01E5A",
    "terminal.ansiGreen": "#2EB67D",
    "terminal.ansiYellow": "#ECB22E",
    "terminal.ansiBlue": "#1264A3",
    "terminal.ansiMagenta": "#4A154B",
    "terminal.ansiCyan": "#1264A3",
    "terminal.ansiWhite": "#FFFFFF",
    "terminal.ansiBrightBlack": "#616061",
    "terminal.ansiBrightRed": "#E8486F",
    "terminal.ansiBrightGreen": "#4BC98A",
    "terminal.ansiBrightYellow": "#F0C745",
    "terminal.ansiBrightBlue": "#2B7ABF",
    "terminal.ansiBrightMagenta": "#611F69",
    "terminal.ansiBrightCyan": "#2B7ABF",
    "terminal.ansiBrightWhite": "#FFFFFF",
    "terminalCursor.foreground": "#4A154B",

    // Git Decoration
    "gitDecoration.addedResourceForeground": "#2EB67D",
    "gitDecoration.modifiedResourceForeground": "#ECB22E",
    "gitDecoration.deletedResourceForeground": "#E01E5A",
    "gitDecoration.untrackedResourceForeground": "#2EB67D",
    "gitDecoration.ignoredResourceForeground": "#999999",
    "gitDecoration.conflictingResourceForeground": "#E01E5A",

    // Button
    "button.background": "#4A154B",
    "button.foreground": "#FFFFFF",
    "button.hoverBackground": "#611F69",

    // Input
    "input.background": "#FFFFFF",
    "input.border": "#DDDDDD",
    "input.foreground": "#1D1C1D",
    "input.placeholderForeground": "#999999",
    "inputOption.activeBackground": "#4A154B22",
    "inputOption.activeBorder": "#4A154B",
    "inputOption.activeForeground": "#1D1C1D",

    // Badge
    "badge.background": "#E01E5A",
    "badge.foreground": "#FFFFFF",

    // Progress Bar
    "progressBar.background": "#4A154B",

    // Bracket Pair Colorization
    "editorBracketHighlight.foreground1": "#1264A3",
    "editorBracketHighlight.foreground2": "#E01E5A",
    "editorBracketHighlight.foreground3": "#ECB22E",
    "editorBracketHighlight.foreground4": "#2EB67D",
    "editorBracketHighlight.foreground5": "#4A154B",
    "editorBracketHighlight.foreground6": "#9370DB"
  },
  "tokenColors": [
    {
      "name": "Comment",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": { "foreground": "#008000", "fontStyle": "italic" }
    },
    {
      "name": "String",
      "scope": ["string", "string.quoted", "string.template"],
      "settings": { "foreground": "#A31515" }
    },
    {
      "name": "Number",
      "scope": ["constant.numeric"],
      "settings": { "foreground": "#098658" }
    },
    {
      "name": "Constant",
      "scope": ["constant", "constant.language"],
      "settings": { "foreground": "#0000FF" }
    },
    {
      "name": "Keyword",
      "scope": ["keyword", "keyword.control"],
      "settings": { "foreground": "#AF00DB" }
    },
    {
      "name": "Storage",
      "scope": ["storage", "storage.type"],
      "settings": { "foreground": "#0000FF" }
    },
    {
      "name": "Function",
      "scope": ["entity.name.function", "support.function"],
      "settings": { "foreground": "#795E26" }
    },
    {
      "name": "Class & Type",
      "scope": ["entity.name.class", "entity.name.type", "support.class"],
      "settings": { "foreground": "#267F99" }
    },
    {
      "name": "Variable",
      "scope": ["variable", "variable.other"],
      "settings": { "foreground": "#001080" }
    },
    {
      "name": "Tag",
      "scope": ["entity.name.tag"],
      "settings": { "foreground": "#800000" }
    },
    {
      "name": "Attribute",
      "scope": ["entity.other.attribute-name"],
      "settings": { "foreground": "#E50000" }
    }
  ],
  "semanticHighlighting": true,
  "semanticTokenColors": {
    "namespace": "#267F99",
    "class": "#267F99",
    "interface": "#267F99",
    "function": "#795E26",
    "variable": "#001080",
    "parameter": "#001080",
    "property": "#001080",
    "keyword": "#AF00DB",
    "string": "#A31515",
    "number": "#098658"
  }
}
