{
  "$schema": "vscode://schemas/color-theme",
  "name": "Gigily Teams Dark",
  "type": "dark",
  "colors": {
    // Base colors
    "foreground": "#D4D4D4",
    "focusBorder": "#6264A7",
    "selection.background": "#6264A7AA",
    "descriptionForeground": "#CCCCCC",
    "errorForeground": "#F44747",
    "icon.foreground": "#CCCCCC",

    // Activity Bar (Teams purple)
    "activityBar.background": "#6264A7",
    "activityBar.foreground": "#FFFFFF",
    "activityBar.inactiveForeground": "#FFFFFFAA",
    "activityBar.border": "#464775",
    "activityBar.activeBorder": "#FFFFFF",
    "activityBarBadge.background": "#C4314B",
    "activityBarBadge.foreground": "#FFFFFF",

    // Side Bar
    "sideBar.background": "#201F1E",
    "sideBar.foreground": "#D4D4D4",
    "sideBar.border": "#323130",
    "sideBarTitle.foreground": "#D4D4D4",
    "sideBarSectionHeader.background": "#292828",
    "sideBarSectionHeader.foreground": "#D4D4D4",
    "sideBarSectionHeader.border": "#323130",

    // Lists and Trees
    "list.activeSelectionBackground": "#6264A7",
    "list.activeSelectionForeground": "#FFFFFF",
    "list.inactiveSelectionBackground": "#464775",
    "list.inactiveSelectionForeground": "#FFFFFF",
    "list.hoverBackground": "#292828",
    "list.hoverForeground": "#FFFFFF",
    "list.focusBackground": "#6264A7",
    "list.focusForeground": "#FFFFFF",
    "list.highlightForeground": "#A6A7DC",
    "list.dropBackground": "#464775",

    // Editor
    "editor.background": "#201F1E",
    "editor.foreground": "#D4D4D4",
    "editor.lineHighlightBackground": "#292828",
    "editor.lineHighlightBorder": "#292828",
    "editor.selectionBackground": "#6264A766",
    "editor.selectionHighlightBackground": "#46477555",
    "editor.wordHighlightBackground": "#46477566",
    "editor.wordHighlightStrongBackground": "#6264A766",
    "editor.findMatchBackground": "#A6A7DC44",
    "editor.findMatchHighlightBackground": "#FFB90044",
    "editor.findRangeHighlightBackground": "#3A3D4166",
    "editor.hoverHighlightBackground": "#6264A777",
    "editor.rangeHighlightBackground": "#FFFFFF0B",
    "editorCursor.foreground": "#6264A7",
    "editorWhitespace.foreground": "#3B3A32",
    "editorIndentGuide.background1": "#404040",
    "editorIndentGuide.activeBackground1": "#707070",
    "editorLineNumber.foreground": "#5A5A5A",
    "editorLineNumber.activeForeground": "#D4D4D4",
    "editorRuler.foreground": "#5A5A5A",
    "editorBracketMatch.background": "#6264A733",
    "editorBracketMatch.border": "#6264A7",

    // Editor Groups & Tabs
    "editorGroup.border": "#323130",
    "editorGroupHeader.tabsBackground": "#201F1E",
    "editorGroupHeader.tabsBorder": "#201F1E",
    "tab.activeBackground": "#292828",
    "tab.activeForeground": "#FFFFFF",
    "tab.activeBorderTop": "#6264A7",
    "tab.inactiveBackground": "#201F1E",
    "tab.inactiveForeground": "#888888",
    "tab.border": "#292828",
    "tab.hoverBackground": "#323130",
    "tab.hoverBorder": "#6264A7",

    // Editor Widget
    "editorWidget.background": "#292828",
    "editorWidget.border": "#454545",
    "editorSuggestWidget.background": "#292828",
    "editorSuggestWidget.border": "#454545",
    "editorSuggestWidget.foreground": "#D4D4D4",
    "editorSuggestWidget.highlightForeground": "#A6A7DC",
    "editorSuggestWidget.selectedBackground": "#6264A7",
    "editorHoverWidget.background": "#292828",
    "editorHoverWidget.border": "#454545",

    // Peek View
    "peekView.border": "#6264A7",
    "peekViewEditor.background": "#201F1E",
    "peekViewEditorGutter.background": "#201F1E",
    "peekViewResult.background": "#292828",
    "peekViewResult.fileForeground": "#FFFFFF",
    "peekViewResult.lineForeground": "#BBBBBB",
    "peekViewResult.matchHighlightBackground": "#A6A7DC66",
    "peekViewResult.selectionBackground": "#6264A7",
    "peekViewResult.selectionForeground": "#FFFFFF",
    "peekViewTitle.background": "#201F1E",
    "peekViewTitleLabel.foreground": "#FFFFFF",
    "peekViewTitleDescription.foreground": "#CCCCCC",

    // Diff Editor
    "diffEditor.insertedTextBackground": "#107C1033",
    "diffEditor.removedTextBackground": "#C4314B33",
    "diffEditor.insertedLineBackground": "#107C1022",
    "diffEditor.removedLineBackground": "#C4314B22",

    // Status Bar (Teams purple)
    "statusBar.background": "#6264A7",
    "statusBar.foreground": "#FFFFFF",
    "statusBar.border": "#464775",
    "statusBar.noFolderBackground": "#6264A7",
    "statusBar.debuggingBackground": "#FFB900",
    "statusBar.debuggingForeground": "#201F1E",
    "statusBarItem.activeBackground": "#FFFFFF33",
    "statusBarItem.hoverBackground": "#FFFFFF22",
    "statusBarItem.prominentBackground": "#464775",
    "statusBarItem.prominentHoverBackground": "#7B83EB",
    "statusBarItem.remoteBackground": "#6264A7",
    "statusBarItem.remoteForeground": "#FFFFFF",

    // Title Bar
    "titleBar.activeBackground": "#6264A7",
    "titleBar.activeForeground": "#FFFFFF",
    "titleBar.inactiveBackground": "#464775",
    "titleBar.inactiveForeground": "#FFFFFFAA",
    "titleBar.border": "#464775",

    // Command Center
    "commandCenter.background": "#D5D6F2",
    "commandCenter.foreground": "#464775",
    "commandCenter.border": "#464775",
    "commandCenter.activeBackground": "#C5C6E8",
    "commandCenter.activeForeground": "#464775",
    "commandCenter.activeBorder": "#6264A7",
    "commandCenter.inactiveForeground": "#464775",

    // Menu Bar
    "menubar.selectionForeground": "#FFFFFF",
    "menubar.selectionBackground": "#6264A7",
    "menu.background": "#292828",
    "menu.foreground": "#D4D4D4",
    "menu.selectionBackground": "#6264A7",
    "menu.selectionForeground": "#FFFFFF",
    "menu.separatorBackground": "#454545",
    "menu.border": "#454545",

    // Notifications
    "notificationCenter.border": "#454545",
    "notificationCenterHeader.background": "#292828",
    "notificationCenterHeader.foreground": "#D4D4D4",
    "notifications.background": "#292828",
    "notifications.foreground": "#D4D4D4",
    "notifications.border": "#454545",
    "notificationLink.foreground": "#A6A7DC",

    // Command Palette & Quick Input
    "quickInput.background": "#292828",
    "quickInput.foreground": "#D4D4D4",
    "quickInputTitle.background": "#201F1E",
    "quickInputList.focusBackground": "#6264A7",
    "quickInputList.focusForeground": "#FFFFFF",
    "pickerGroup.foreground": "#A6A7DC",
    "pickerGroup.border": "#6264A7",

    // Panel (Terminal, Output, Problems)
    "panel.background": "#201F1E",
    "panel.border": "#323130",
    "panelTitle.activeBorder": "#6264A7",
    "panelTitle.activeForeground": "#FFFFFF",
    "panelTitle.inactiveForeground": "#858585",

    // Terminal (Teams colors)
    "terminal.background": "#201F1E",
    "terminal.foreground": "#D4D4D4",
    "terminal.ansiBlack": "#201F1E",
    "terminal.ansiRed": "#C4314B",
    "terminal.ansiGreen": "#107C10",
    "terminal.ansiYellow": "#FFB900",
    "terminal.ansiBlue": "#6264A7",
    "terminal.ansiMagenta": "#9B59B6",
    "terminal.ansiCyan": "#00BCF2",
    "terminal.ansiWhite": "#E5E5E5",
    "terminal.ansiBrightBlack": "#666666",
    "terminal.ansiBrightRed": "#D9485E",
    "terminal.ansiBrightGreen": "#2D9C2D",
    "terminal.ansiBrightYellow": "#FFC83D",
    "terminal.ansiBrightBlue": "#7B83EB",
    "terminal.ansiBrightMagenta": "#B072D0",
    "terminal.ansiBrightCyan": "#33CCFF",
    "terminal.ansiBrightWhite": "#FFFFFF",
    "terminalCursor.foreground": "#6264A7",
    "terminalCursor.background": "#201F1E",
    "terminal.selectionBackground": "#6264A766",
    "terminal.selectionForeground": "#FFFFFF",
    "terminal.findMatchBackground": "#A6A7DC44",
    "terminal.findMatchBorder": "#6264A7",
    "terminal.findMatchHighlightBackground": "#FFB90044",
    "terminal.findMatchHighlightBorder": "#00000000",
    "terminal.border": "#323130",
    "terminal.tab.activeBorder": "#6264A7",
    "terminalCommandDecoration.defaultBackground": "#6264A7",
    "terminalCommandDecoration.successBackground": "#107C10",
    "terminalCommandDecoration.errorBackground": "#C4314B",

    // Git Decoration
    "gitDecoration.addedResourceForeground": "#107C10",
    "gitDecoration.modifiedResourceForeground": "#FFB900",
    "gitDecoration.deletedResourceForeground": "#C4314B",
    "gitDecoration.untrackedResourceForeground": "#107C10",
    "gitDecoration.ignoredResourceForeground": "#8C8C8C",
    "gitDecoration.conflictingResourceForeground": "#C4314B",
    "gitDecoration.submoduleResourceForeground": "#00BCF2",

    // Minimap
    "minimap.findMatchHighlight": "#6264A7AA",
    "minimap.selectionHighlight": "#6264A7AA",
    "minimap.errorHighlight": "#C4314B",
    "minimap.warningHighlight": "#FFB900",
    "minimapGutter.addedBackground": "#107C10",
    "minimapGutter.modifiedBackground": "#FFB900",
    "minimapGutter.deletedBackground": "#C4314B",

    // Scrollbar
    "scrollbar.shadow": "#000000",
    "scrollbarSlider.background": "#79797966",
    "scrollbarSlider.hoverBackground": "#646464AA",
    "scrollbarSlider.activeBackground": "#BFBFBF66",

    // Breadcrumb
    "breadcrumb.foreground": "#D4D4D4",
    "breadcrumb.background": "#201F1E",
    "breadcrumb.focusForeground": "#FFFFFF",
    "breadcrumb.activeSelectionForeground": "#FFFFFF",
    "breadcrumbPicker.background": "#292828",

    // Button
    "button.background": "#6264A7",
    "button.foreground": "#FFFFFF",
    "button.hoverBackground": "#464775",
    "button.secondaryBackground": "#3A3D41",
    "button.secondaryForeground": "#FFFFFF",
    "button.secondaryHoverBackground": "#45494E",

    // Input
    "input.background": "#201F1E",
    "input.border": "#3C3C3C",
    "input.foreground": "#D4D4D4",
    "input.placeholderForeground": "#A6A6A6",
    "inputOption.activeBackground": "#6264A799",
    "inputOption.activeBorder": "#6264A7",
    "inputOption.activeForeground": "#FFFFFF",
    "inputValidation.errorBackground": "#5A1D1D",
    "inputValidation.errorBorder": "#C4314B",
    "inputValidation.warningBackground": "#352A05",
    "inputValidation.warningBorder": "#FFB900",
    "inputValidation.infoBackground": "#063B49",
    "inputValidation.infoBorder": "#00BCF2",

    // Dropdown
    "dropdown.background": "#201F1E",
    "dropdown.border": "#3C3C3C",
    "dropdown.foreground": "#D4D4D4",
    "dropdown.listBackground": "#292828",

    // Badge
    "badge.background": "#C4314B",
    "badge.foreground": "#FFFFFF",

    // Progress Bar
    "progressBar.background": "#6264A7",

    // Settings
    "settings.headerForeground": "#FFFFFF",
    "settings.modifiedItemIndicator": "#6264A7",
    "settings.focusedRowBackground": "#46477533",

    // Bracket Pair Colorization
    "editorBracketHighlight.foreground1": "#6264A7",
    "editorBracketHighlight.foreground2": "#C4314B",
    "editorBracketHighlight.foreground3": "#FFB900",
    "editorBracketHighlight.foreground4": "#107C10",
    "editorBracketHighlight.foreground5": "#00BCF2",
    "editorBracketHighlight.foreground6": "#9B59B6"
  },
  "tokenColors": [
    {
      "name": "Comment",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": { "foreground": "#6A9955", "fontStyle": "italic" }
    },
    {
      "name": "String",
      "scope": ["string", "string.quoted", "string.template"],
      "settings": { "foreground": "#CE9178" }
    },
    {
      "name": "Number",
      "scope": ["constant.numeric"],
      "settings": { "foreground": "#B5CEA8" }
    },
    {
      "name": "Constant",
      "scope": ["constant", "constant.language"],
      "settings": { "foreground": "#4FC1FF" }
    },
    {
      "name": "Keyword",
      "scope": ["keyword", "keyword.control"],
      "settings": { "foreground": "#C586C0" }
    },
    {
      "name": "Storage",
      "scope": ["storage", "storage.type"],
      "settings": { "foreground": "#569CD6" }
    },
    {
      "name": "Function",
      "scope": ["entity.name.function", "support.function"],
      "settings": { "foreground": "#DCDCAA" }
    },
    {
      "name": "Class & Type",
      "scope": ["entity.name.class", "entity.name.type", "support.class"],
      "settings": { "foreground": "#4EC9B0" }
    },
    {
      "name": "Variable",
      "scope": ["variable", "variable.other"],
      "settings": { "foreground": "#9CDCFE" }
    },
    {
      "name": "Tag",
      "scope": ["entity.name.tag"],
      "settings": { "foreground": "#569CD6" }
    },
    {
      "name": "Attribute",
      "scope": ["entity.other.attribute-name"],
      "settings": { "foreground": "#9CDCFE" }
    }
  ],
  "semanticHighlighting": true,
  "semanticTokenColors": {
    "namespace": "#4EC9B0",
    "class": "#4EC9B0",
    "interface": "#4EC9B0",
    "function": "#DCDCAA",
    "variable": "#9CDCFE",
    "parameter": "#9CDCFE",
    "property": "#9CDCFE",
    "keyword": "#C586C0",
    "string": "#CE9178",
    "number": "#B5CEA8"
  }
}
