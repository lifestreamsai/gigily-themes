{
  "$schema": "vscode://schemas/color-theme",
  "name": "Gigily Teams Light",
  "type": "light",
  "colors": {
    // Base colors
    "foreground": "#252423",
    "focusBorder": "#6264A7",
    "selection.background": "#6264A7AA",
    "descriptionForeground": "#605E5C",
    "errorForeground": "#C4314B",
    "icon.foreground": "#605E5C",

    // Activity Bar (Teams purple)
    "activityBar.background": "#6264A7",
    "activityBar.foreground": "#FFFFFF",
    "activityBar.inactiveForeground": "#FFFFFFAA",
    "activityBar.border": "#464775",
    "activityBar.activeBorder": "#FFFFFF",
    "activityBarBadge.background": "#C4314B",
    "activityBarBadge.foreground": "#FFFFFF",

    // Side Bar
    "sideBar.background": "#FAF9F8",
    "sideBar.foreground": "#252423",
    "sideBar.border": "#E1DFDD",
    "sideBarTitle.foreground": "#605E5C",
    "sideBarSectionHeader.background": "#F3F2F1",
    "sideBarSectionHeader.foreground": "#252423",
    "sideBarSectionHeader.border": "#E1DFDD",

    // Lists and Trees
    "list.activeSelectionBackground": "#6264A7",
    "list.activeSelectionForeground": "#FFFFFF",
    "list.inactiveSelectionBackground": "#EDEBE9",
    "list.inactiveSelectionForeground": "#252423",
    "list.hoverBackground": "#F3F2F1",
    "list.hoverForeground": "#252423",
    "list.focusBackground": "#6264A7",
    "list.focusForeground": "#FFFFFF",
    "list.highlightForeground": "#6264A7",
    "list.dropBackground": "#EDEBE9",

    // Editor
    "editor.background": "#FFFFFF",
    "editor.foreground": "#252423",
    "editor.lineHighlightBackground": "#FAF9F8",
    "editor.lineHighlightBorder": "#FAF9F8",
    "editor.selectionBackground": "#6264A744",
    "editor.selectionHighlightBackground": "#D5D6F233",
    "editor.wordHighlightBackground": "#D5D6F244",
    "editor.wordHighlightStrongBackground": "#6264A744",
    "editor.findMatchBackground": "#A6A7DC44",
    "editor.findMatchHighlightBackground": "#FFB90044",
    "editor.findRangeHighlightBackground": "#F3F2F166",
    "editor.hoverHighlightBackground": "#6264A733",
    "editor.rangeHighlightBackground": "#00000008",
    "editorCursor.foreground": "#6264A7",
    "editorWhitespace.foreground": "#CCCCCC",
    "editorIndentGuide.background1": "#E1DFDD",
    "editorIndentGuide.activeBackground1": "#C8C6C4",
    "editorLineNumber.foreground": "#A19F9D",
    "editorLineNumber.activeForeground": "#252423",
    "editorRuler.foreground": "#C8C6C4",
    "editorBracketMatch.background": "#6264A733",
    "editorBracketMatch.border": "#6264A7",

    // Editor Groups & Tabs
    "editorGroup.border": "#E1DFDD",
    "editorGroupHeader.tabsBackground": "#FAF9F8",
    "editorGroupHeader.tabsBorder": "#FAF9F8",
    "tab.activeBackground": "#FFFFFF",
    "tab.activeForeground": "#252423",
    "tab.activeBorderTop": "#6264A7",
    "tab.inactiveBackground": "#FAF9F8",
    "tab.inactiveForeground": "#605E5C",
    "tab.border": "#F3F2F1",
    "tab.hoverBackground": "#FFFFFF",
    "tab.hoverBorder": "#6264A7",

    // Editor Widget
    "editorWidget.background": "#FAF9F8",
    "editorWidget.border": "#E1DFDD",
    "editorSuggestWidget.background": "#FAF9F8",
    "editorSuggestWidget.border": "#E1DFDD",
    "editorSuggestWidget.foreground": "#252423",
    "editorSuggestWidget.highlightForeground": "#6264A7",
    "editorSuggestWidget.selectedBackground": "#6264A7",
    "editorSuggestWidget.selectedForeground": "#FFFFFF",
    "editorHoverWidget.background": "#FAF9F8",
    "editorHoverWidget.border": "#E1DFDD",

    // Status Bar
    "statusBar.background": "#6264A7",
    "statusBar.foreground": "#FFFFFF",
    "statusBar.border": "#464775",
    "statusBar.noFolderBackground": "#6264A7",
    "statusBar.debuggingBackground": "#FFB900",
    "statusBar.debuggingForeground": "#252423",
    "statusBarItem.activeBackground": "#FFFFFF33",
    "statusBarItem.hoverBackground": "#FFFFFF22",
    "statusBarItem.prominentBackground": "#464775",
    "statusBarItem.prominentHoverBackground": "#7B83EB",
    "statusBarItem.remoteBackground": "#6264A7",
    "statusBarItem.remoteForeground": "#FFFFFF",

    // Title Bar
    "titleBar.activeBackground": "#6264A7",
    "titleBar.activeForeground": "#FFFFFF",
    "titleBar.inactiveBackground": "#7B83EB",
    "titleBar.inactiveForeground": "#FFFFFFAA",
    "titleBar.border": "#464775",

    // Command Center
    "commandCenter.background": "#D5D6F2",
    "commandCenter.foreground": "#464775",
    "commandCenter.border": "#464775",
    "commandCenter.activeBackground": "#C5C6E8",
    "commandCenter.activeForeground": "#464775",
    "commandCenter.activeBorder": "#6264A7",
    "commandCenter.inactiveForeground": "#464775",

    // Menu
    "menu.background": "#FFFFFF",
    "menu.foreground": "#252423",
    "menu.selectionBackground": "#6264A7",
    "menu.selectionForeground": "#FFFFFF",
    "menu.separatorBackground": "#E1DFDD",
    "menu.border": "#E1DFDD",

    // Terminal (Teams colors)
    "terminal.background": "#FFFFFF",
    "terminal.foreground": "#252423",
    "terminal.ansiBlack": "#252423",
    "terminal.ansiRed": "#C4314B",
    "terminal.ansiGreen": "#107C10",
    "terminal.ansiYellow": "#FFB900",
    "terminal.ansiBlue": "#6264A7",
    "terminal.ansiMagenta": "#9B59B6",
    "terminal.ansiCyan": "#00BCF2",
    "terminal.ansiWhite": "#FFFFFF",
    "terminal.ansiBrightBlack": "#605E5C",
    "terminal.ansiBrightRed": "#D9485E",
    "terminal.ansiBrightGreen": "#2D9C2D",
    "terminal.ansiBrightYellow": "#FFC83D",
    "terminal.ansiBrightBlue": "#7B83EB",
    "terminal.ansiBrightMagenta": "#B072D0",
    "terminal.ansiBrightCyan": "#33CCFF",
    "terminal.ansiBrightWhite": "#FFFFFF",
    "terminalCursor.foreground": "#6264A7",

    // Git Decoration
    "gitDecoration.addedResourceForeground": "#107C10",
    "gitDecoration.modifiedResourceForeground": "#FFB900",
    "gitDecoration.deletedResourceForeground": "#C4314B",
    "gitDecoration.untrackedResourceForeground": "#107C10",
    "gitDecoration.ignoredResourceForeground": "#A19F9D",
    "gitDecoration.conflictingResourceForeground": "#C4314B",

    // Button
    "button.background": "#6264A7",
    "button.foreground": "#FFFFFF",
    "button.hoverBackground": "#464775",

    // Input
    "input.background": "#FFFFFF",
    "input.border": "#E1DFDD",
    "input.foreground": "#252423",
    "input.placeholderForeground": "#A19F9D",
    "inputOption.activeBackground": "#6264A722",
    "inputOption.activeBorder": "#6264A7",
    "inputOption.activeForeground": "#252423",

    // Badge
    "badge.background": "#C4314B",
    "badge.foreground": "#FFFFFF",

    // Progress Bar
    "progressBar.background": "#6264A7",

    // Bracket Pair Colorization
    "editorBracketHighlight.foreground1": "#6264A7",
    "editorBracketHighlight.foreground2": "#C4314B",
    "editorBracketHighlight.foreground3": "#FFB900",
    "editorBracketHighlight.foreground4": "#107C10",
    "editorBracketHighlight.foreground5": "#00BCF2",
    "editorBracketHighlight.foreground6": "#9B59B6"
  },
  "tokenColors": [
    {
      "name": "Comment",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": { "foreground": "#008000", "fontStyle": "italic" }
    },
    {
      "name": "String",
      "scope": ["string", "string.quoted", "string.template"],
      "settings": { "foreground": "#A31515" }
    },
    {
      "name": "Number",
      "scope": ["constant.numeric"],
      "settings": { "foreground": "#098658" }
    },
    {
      "name": "Constant",
      "scope": ["constant", "constant.language"],
      "settings": { "foreground": "#0000FF" }
    },
    {
      "name": "Keyword",
      "scope": ["keyword", "keyword.control"],
      "settings": { "foreground": "#AF00DB" }
    },
    {
      "name": "Storage",
      "scope": ["storage", "storage.type"],
      "settings": { "foreground": "#0000FF" }
    },
    {
      "name": "Function",
      "scope": ["entity.name.function", "support.function"],
      "settings": { "foreground": "#795E26" }
    },
    {
      "name": "Class & Type",
      "scope": ["entity.name.class", "entity.name.type", "support.class"],
      "settings": { "foreground": "#267F99" }
    },
    {
      "name": "Variable",
      "scope": ["variable", "variable.other"],
      "settings": { "foreground": "#001080" }
    },
    {
      "name": "Tag",
      "scope": ["entity.name.tag"],
      "settings": { "foreground": "#800000" }
    },
    {
      "name": "Attribute",
      "scope": ["entity.other.attribute-name"],
      "settings": { "foreground": "#E50000" }
    }
  ],
  "semanticHighlighting": true,
  "semanticTokenColors": {
    "namespace": "#267F99",
    "class": "#267F99",
    "interface": "#267F99",
    "function": "#795E26",
    "variable": "#001080",
    "parameter": "#001080",
    "property": "#001080",
    "keyword": "#AF00DB",
    "string": "#A31515",
    "number": "#098658"
  }
}
