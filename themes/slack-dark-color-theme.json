{
  "$schema": "vscode://schemas/color-theme",
  "name": "Gigily Slack Dark",
  "type": "dark",
  "colors": {
    // Base colors
    "foreground": "#D1D2D3",
    "focusBorder": "#1264A3",
    "selection.background": "#1264A3AA",
    "descriptionForeground": "#ABABAD",
    "errorForeground": "#E01E5A",
    "icon.foreground": "#ABABAD",

    // Activity Bar (Slack aubergine sidebar)
    "activityBar.background": "#4A154B",
    "activityBar.foreground": "#FFFFFF",
    "activityBar.inactiveForeground": "#FFFFFFAA",
    "activityBar.border": "#3F0E40",
    "activityBar.activeBorder": "#FFFFFF",
    "activityBarBadge.background": "#E01E5A",
    "activityBarBadge.foreground": "#FFFFFF",

    // Side Bar
    "sideBar.background": "#1A1D21",
    "sideBar.foreground": "#D1D2D3",
    "sideBar.border": "#2C2D30",
    "sideBarTitle.foreground": "#ABABAD",
    "sideBarSectionHeader.background": "#222529",
    "sideBarSectionHeader.foreground": "#D1D2D3",
    "sideBarSectionHeader.border": "#2C2D30",

    // Lists and Trees
    "list.activeSelectionBackground": "#1164A3",
    "list.activeSelectionForeground": "#FFFFFF",
    "list.inactiveSelectionBackground": "#350D36",
    "list.inactiveSelectionForeground": "#FFFFFF",
    "list.hoverBackground": "#222529",
    "list.hoverForeground": "#FFFFFF",
    "list.focusBackground": "#1164A3",
    "list.focusForeground": "#FFFFFF",
    "list.highlightForeground": "#36C5F0",
    "list.dropBackground": "#350D36",

    // Editor
    "editor.background": "#1A1D21",
    "editor.foreground": "#D1D2D3",
    "editor.lineHighlightBackground": "#222529",
    "editor.lineHighlightBorder": "#222529",
    "editor.selectionBackground": "#1164A366",
    "editor.selectionHighlightBackground": "#350D3655",
    "editor.wordHighlightBackground": "#350D3666",
    "editor.wordHighlightStrongBackground": "#1164A366",
    "editor.findMatchBackground": "#36C5F044",
    "editor.findMatchHighlightBackground": "#ECB22E44",
    "editor.findRangeHighlightBackground": "#3A3D4166",
    "editor.hoverHighlightBackground": "#1164A377",
    "editor.rangeHighlightBackground": "#FFFFFF0B",
    "editorCursor.foreground": "#36C5F0",
    "editorWhitespace.foreground": "#3B3A32",
    "editorIndentGuide.background1": "#404040",
    "editorIndentGuide.activeBackground1": "#707070",
    "editorLineNumber.foreground": "#5A5A5A",
    "editorLineNumber.activeForeground": "#D1D2D3",
    "editorRuler.foreground": "#5A5A5A",
    "editorBracketMatch.background": "#1164A333",
    "editorBracketMatch.border": "#1164A3",

    // Editor Groups & Tabs
    "editorGroup.border": "#2C2D30",
    "editorGroupHeader.tabsBackground": "#1A1D21",
    "editorGroupHeader.tabsBorder": "#1A1D21",
    "tab.activeBackground": "#222529",
    "tab.activeForeground": "#FFFFFF",
    "tab.activeBorderTop": "#4A154B",
    "tab.inactiveBackground": "#1A1D21",
    "tab.inactiveForeground": "#888888",
    "tab.border": "#222529",
    "tab.hoverBackground": "#2C2D30",
    "tab.hoverBorder": "#4A154B",

    // Editor Widget
    "editorWidget.background": "#222529",
    "editorWidget.border": "#454545",
    "editorSuggestWidget.background": "#222529",
    "editorSuggestWidget.border": "#454545",
    "editorSuggestWidget.foreground": "#D1D2D3",
    "editorSuggestWidget.highlightForeground": "#36C5F0",
    "editorSuggestWidget.selectedBackground": "#1164A3",
    "editorHoverWidget.background": "#222529",
    "editorHoverWidget.border": "#454545",

    // Peek View
    "peekView.border": "#4A154B",
    "peekViewEditor.background": "#1A1D21",
    "peekViewEditorGutter.background": "#1A1D21",
    "peekViewResult.background": "#222529",
    "peekViewResult.fileForeground": "#FFFFFF",
    "peekViewResult.lineForeground": "#ABABAD",
    "peekViewResult.matchHighlightBackground": "#36C5F066",
    "peekViewResult.selectionBackground": "#1164A3",
    "peekViewResult.selectionForeground": "#FFFFFF",
    "peekViewTitle.background": "#1A1D21",
    "peekViewTitleLabel.foreground": "#FFFFFF",
    "peekViewTitleDescription.foreground": "#ABABAD",

    // Diff Editor
    "diffEditor.insertedTextBackground": "#2EB67D33",
    "diffEditor.removedTextBackground": "#E01E5A33",
    "diffEditor.insertedLineBackground": "#2EB67D22",
    "diffEditor.removedLineBackground": "#E01E5A22",

    // Status Bar (Slack aubergine)
    "statusBar.background": "#4A154B",
    "statusBar.foreground": "#FFFFFF",
    "statusBar.border": "#3F0E40",
    "statusBar.noFolderBackground": "#4A154B",
    "statusBar.debuggingBackground": "#ECB22E",
    "statusBar.debuggingForeground": "#1A1D21",
    "statusBarItem.activeBackground": "#FFFFFF33",
    "statusBarItem.hoverBackground": "#FFFFFF22",
    "statusBarItem.prominentBackground": "#3F0E40",
    "statusBarItem.prominentHoverBackground": "#611F69",
    "statusBarItem.remoteBackground": "#4A154B",
    "statusBarItem.remoteForeground": "#FFFFFF",

    // Title Bar
    "titleBar.activeBackground": "#4A154B",
    "titleBar.activeForeground": "#FFFFFF",
    "titleBar.inactiveBackground": "#3F0E40",
    "titleBar.inactiveForeground": "#FFFFFFAA",
    "titleBar.border": "#3F0E40",

    // Command Center
    "commandCenter.background": "#E8D5E8",
    "commandCenter.foreground": "#3F0E40",
    "commandCenter.border": "#3F0E40",
    "commandCenter.activeBackground": "#D9C2D9",
    "commandCenter.activeForeground": "#3F0E40",
    "commandCenter.activeBorder": "#4A154B",
    "commandCenter.inactiveForeground": "#3F0E40",

    // Menu Bar
    "menubar.selectionForeground": "#FFFFFF",
    "menubar.selectionBackground": "#4A154B",
    "menu.background": "#222529",
    "menu.foreground": "#D1D2D3",
    "menu.selectionBackground": "#1164A3",
    "menu.selectionForeground": "#FFFFFF",
    "menu.separatorBackground": "#454545",
    "menu.border": "#454545",

    // Notifications
    "notificationCenter.border": "#454545",
    "notificationCenterHeader.background": "#222529",
    "notificationCenterHeader.foreground": "#D1D2D3",
    "notifications.background": "#222529",
    "notifications.foreground": "#D1D2D3",
    "notifications.border": "#454545",
    "notificationLink.foreground": "#36C5F0",

    // Command Palette & Quick Input
    "quickInput.background": "#222529",
    "quickInput.foreground": "#D1D2D3",
    "quickInputTitle.background": "#1A1D21",
    "quickInputList.focusBackground": "#1164A3",
    "quickInputList.focusForeground": "#FFFFFF",
    "pickerGroup.foreground": "#36C5F0",
    "pickerGroup.border": "#4A154B",

    // Panel (Terminal, Output, Problems)
    "panel.background": "#1A1D21",
    "panel.border": "#2C2D30",
    "panelTitle.activeBorder": "#4A154B",
    "panelTitle.activeForeground": "#FFFFFF",
    "panelTitle.inactiveForeground": "#858585",

    // Terminal (Slack colors)
    "terminal.background": "#1A1D21",
    "terminal.foreground": "#D1D2D3",
    "terminal.ansiBlack": "#1A1D21",
    "terminal.ansiRed": "#E01E5A",
    "terminal.ansiGreen": "#2EB67D",
    "terminal.ansiYellow": "#ECB22E",
    "terminal.ansiBlue": "#36C5F0",
    "terminal.ansiMagenta": "#4A154B",
    "terminal.ansiCyan": "#36C5F0",
    "terminal.ansiWhite": "#E5E5E5",
    "terminal.ansiBrightBlack": "#666666",
    "terminal.ansiBrightRed": "#E8486F",
    "terminal.ansiBrightGreen": "#4BC98A",
    "terminal.ansiBrightYellow": "#F0C745",
    "terminal.ansiBrightBlue": "#5DD0F5",
    "terminal.ansiBrightMagenta": "#611F69",
    "terminal.ansiBrightCyan": "#5DD0F5",
    "terminal.ansiBrightWhite": "#FFFFFF",
    "terminalCursor.foreground": "#36C5F0",
    "terminalCursor.background": "#1A1D21",
    "terminal.selectionBackground": "#1164A366",
    "terminal.selectionForeground": "#FFFFFF",
    "terminal.findMatchBackground": "#36C5F044",
    "terminal.findMatchBorder": "#36C5F0",
    "terminal.findMatchHighlightBackground": "#ECB22E44",
    "terminal.findMatchHighlightBorder": "#00000000",
    "terminal.border": "#2C2D30",
    "terminal.tab.activeBorder": "#4A154B",
    "terminalCommandDecoration.defaultBackground": "#4A154B",
    "terminalCommandDecoration.successBackground": "#2EB67D",
    "terminalCommandDecoration.errorBackground": "#E01E5A",

    // Git Decoration
    "gitDecoration.addedResourceForeground": "#2EB67D",
    "gitDecoration.modifiedResourceForeground": "#ECB22E",
    "gitDecoration.deletedResourceForeground": "#E01E5A",
    "gitDecoration.untrackedResourceForeground": "#2EB67D",
    "gitDecoration.ignoredResourceForeground": "#8C8C8C",
    "gitDecoration.conflictingResourceForeground": "#E01E5A",
    "gitDecoration.submoduleResourceForeground": "#36C5F0",

    // Minimap
    "minimap.findMatchHighlight": "#36C5F0AA",
    "minimap.selectionHighlight": "#1164A3AA",
    "minimap.errorHighlight": "#E01E5A",
    "minimap.warningHighlight": "#ECB22E",
    "minimapGutter.addedBackground": "#2EB67D",
    "minimapGutter.modifiedBackground": "#ECB22E",
    "minimapGutter.deletedBackground": "#E01E5A",

    // Scrollbar
    "scrollbar.shadow": "#000000",
    "scrollbarSlider.background": "#79797966",
    "scrollbarSlider.hoverBackground": "#646464AA",
    "scrollbarSlider.activeBackground": "#BFBFBF66",

    // Breadcrumb
    "breadcrumb.foreground": "#ABABAD",
    "breadcrumb.background": "#1A1D21",
    "breadcrumb.focusForeground": "#FFFFFF",
    "breadcrumb.activeSelectionForeground": "#FFFFFF",
    "breadcrumbPicker.background": "#222529",

    // Button
    "button.background": "#4A154B",
    "button.foreground": "#FFFFFF",
    "button.hoverBackground": "#611F69",
    "button.secondaryBackground": "#3A3D41",
    "button.secondaryForeground": "#FFFFFF",
    "button.secondaryHoverBackground": "#45494E",

    // Input
    "input.background": "#1A1D21",
    "input.border": "#3C3C3C",
    "input.foreground": "#D1D2D3",
    "input.placeholderForeground": "#A6A6A6",
    "inputOption.activeBackground": "#4A154B99",
    "inputOption.activeBorder": "#4A154B",
    "inputOption.activeForeground": "#FFFFFF",
    "inputValidation.errorBackground": "#5A1D1D",
    "inputValidation.errorBorder": "#E01E5A",
    "inputValidation.warningBackground": "#352A05",
    "inputValidation.warningBorder": "#ECB22E",
    "inputValidation.infoBackground": "#063B49",
    "inputValidation.infoBorder": "#36C5F0",

    // Dropdown
    "dropdown.background": "#1A1D21",
    "dropdown.border": "#3C3C3C",
    "dropdown.foreground": "#D1D2D3",
    "dropdown.listBackground": "#222529",

    // Badge
    "badge.background": "#E01E5A",
    "badge.foreground": "#FFFFFF",

    // Progress Bar
    "progressBar.background": "#4A154B",

    // Settings
    "settings.headerForeground": "#FFFFFF",
    "settings.modifiedItemIndicator": "#4A154B",
    "settings.focusedRowBackground": "#350D3633",

    // Bracket Pair Colorization
    "editorBracketHighlight.foreground1": "#36C5F0",
    "editorBracketHighlight.foreground2": "#E01E5A",
    "editorBracketHighlight.foreground3": "#ECB22E",
    "editorBracketHighlight.foreground4": "#2EB67D",
    "editorBracketHighlight.foreground5": "#4A154B",
    "editorBracketHighlight.foreground6": "#9370DB"
  },
  "tokenColors": [
    {
      "name": "Comment",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": { "foreground": "#6A9955", "fontStyle": "italic" }
    },
    {
      "name": "String",
      "scope": ["string", "string.quoted", "string.template"],
      "settings": { "foreground": "#CE9178" }
    },
    {
      "name": "Number",
      "scope": ["constant.numeric"],
      "settings": { "foreground": "#B5CEA8" }
    },
    {
      "name": "Constant",
      "scope": ["constant", "constant.language"],
      "settings": { "foreground": "#4FC1FF" }
    },
    {
      "name": "Keyword",
      "scope": ["keyword", "keyword.control"],
      "settings": { "foreground": "#C586C0" }
    },
    {
      "name": "Storage",
      "scope": ["storage", "storage.type"],
      "settings": { "foreground": "#569CD6" }
    },
    {
      "name": "Function",
      "scope": ["entity.name.function", "support.function"],
      "settings": { "foreground": "#DCDCAA" }
    },
    {
      "name": "Class & Type",
      "scope": ["entity.name.class", "entity.name.type", "support.class"],
      "settings": { "foreground": "#4EC9B0" }
    },
    {
      "name": "Variable",
      "scope": ["variable", "variable.other"],
      "settings": { "foreground": "#9CDCFE" }
    },
    {
      "name": "Tag",
      "scope": ["entity.name.tag"],
      "settings": { "foreground": "#569CD6" }
    },
    {
      "name": "Attribute",
      "scope": ["entity.other.attribute-name"],
      "settings": { "foreground": "#9CDCFE" }
    }
  ],
  "semanticHighlighting": true,
  "semanticTokenColors": {
    "namespace": "#4EC9B0",
    "class": "#4EC9B0",
    "interface": "#4EC9B0",
    "function": "#DCDCAA",
    "variable": "#9CDCFE",
    "parameter": "#9CDCFE",
    "property": "#9CDCFE",
    "keyword": "#C586C0",
    "string": "#CE9178",
    "number": "#B5CEA8"
  }
}
