{
  "$schema": "vscode://schemas/color-theme",
  "name": "Word Light",
  "type": "light",
  "colors": {
    // Base colors
    "foreground": "#333333",
    "focusBorder": "#185ABD",
    "selection.background": "#185ABD44",
    "descriptionForeground": "#666666",
    "errorForeground": "#E51400",
    "icon.foreground": "#424242",
    
    // Activity Bar (left sidebar icons)
    "activityBar.background": "#185ABD",
    "activityBar.foreground": "#FFFFFF",
    "activityBar.inactiveForeground": "#FFFFFFAA",
    "activityBar.border": "#103A7E",
    "activityBar.activeBorder": "#FFFFFF",
    "activityBarBadge.background": "#FFFFFF",
    "activityBarBadge.foreground": "#185ABD",
    
    // Side Bar
    "sideBar.background": "#F3F3F3",
    "sideBar.foreground": "#333333",
    "sideBar.border": "#E5E5E5",
    "sideBarTitle.foreground": "#333333",
    "sideBarSectionHeader.background": "#EBEBEB",
    "sideBarSectionHeader.foreground": "#333333",
    "sideBarSectionHeader.border": "#E5E5E5",
    
    // Lists and Trees
    "list.activeSelectionBackground": "#185ABD",
    "list.activeSelectionForeground": "#FFFFFF",
    "list.inactiveSelectionBackground": "#C5D4E8",
    "list.inactiveSelectionForeground": "#333333",
    "list.hoverBackground": "#E8E8E8",
    "list.hoverForeground": "#333333",
    "list.focusBackground": "#185ABD",
    "list.focusForeground": "#FFFFFF",
    "list.highlightForeground": "#185ABD",
    "list.dropBackground": "#C5D4E8",
    
    // Editor
    "editor.background": "#FFFFFF",
    "editor.foreground": "#333333",
    "editor.lineHighlightBackground": "#F5F5F5",
    "editor.lineHighlightBorder": "#EEEEEE",
    "editor.selectionBackground": "#ADD6FF",
    "editor.selectionHighlightBackground": "#C5D4E866",
    "editor.wordHighlightBackground": "#C5D4E866",
    "editor.wordHighlightStrongBackground": "#185ABD33",
    "editor.findMatchBackground": "#A8AC94",
    "editor.findMatchHighlightBackground": "#EA5C0055",
    "editor.findRangeHighlightBackground": "#B4B4B433",
    "editor.hoverHighlightBackground": "#ADD6FF77",
    "editor.rangeHighlightBackground": "#FDFF0033",
    "editorCursor.foreground": "#185ABD",
    "editorWhitespace.foreground": "#AAAAAA",
    "editorIndentGuide.background1": "#D3D3D3",
    "editorIndentGuide.activeBackground1": "#939393",
    "editorLineNumber.foreground": "#999999",
    "editorLineNumber.activeForeground": "#185ABD",
    "editorRuler.foreground": "#D3D3D3",
    "editorBracketMatch.background": "#C5D4E8",
    "editorBracketMatch.border": "#185ABD",
    
    // Editor Groups & Tabs
    "editorGroup.border": "#E5E5E5",
    "editorGroupHeader.tabsBackground": "#F3F3F3",
    "editorGroupHeader.tabsBorder": "#E5E5E5",
    "tab.activeBackground": "#FFFFFF",
    "tab.activeForeground": "#333333",
    "tab.activeBorderTop": "#185ABD",
    "tab.inactiveBackground": "#ECECEC",
    "tab.inactiveForeground": "#666666",
    "tab.border": "#E5E5E5",
    "tab.hoverBackground": "#FFFFFF",
    "tab.hoverBorder": "#185ABD",
    
    // Editor Widget
    "editorWidget.background": "#F3F3F3",
    "editorWidget.border": "#C8C8C8",
    "editorSuggestWidget.background": "#FFFFFF",
    "editorSuggestWidget.border": "#C8C8C8",
    "editorSuggestWidget.foreground": "#333333",
    "editorSuggestWidget.highlightForeground": "#185ABD",
    "editorSuggestWidget.selectedBackground": "#185ABD",
    "editorSuggestWidget.selectedForeground": "#FFFFFF",
    "editorHoverWidget.background": "#FFFFFF",
    "editorHoverWidget.border": "#C8C8C8",
    
    // Peek View
    "peekView.border": "#185ABD",
    "peekViewEditor.background": "#FFFFFF",
    "peekViewEditorGutter.background": "#FFFFFF",
    "peekViewResult.background": "#F3F3F3",
    "peekViewResult.fileForeground": "#333333",
    "peekViewResult.lineForeground": "#666666",
    "peekViewResult.matchHighlightBackground": "#C5D4E8",
    "peekViewResult.selectionBackground": "#185ABD",
    "peekViewResult.selectionForeground": "#FFFFFF",
    "peekViewTitle.background": "#FFFFFF",
    "peekViewTitleLabel.foreground": "#333333",
    "peekViewTitleDescription.foreground": "#666666",
    
    // Diff Editor
    "diffEditor.insertedTextBackground": "#185ABD22",
    "diffEditor.removedTextBackground": "#FF000022",
    "diffEditor.insertedLineBackground": "#185ABD18",
    "diffEditor.removedLineBackground": "#FF000018",
    
    // Status Bar
    "statusBar.background": "#185ABD",
    "statusBar.foreground": "#FFFFFF",
    "statusBar.border": "#103A7E",
    "statusBar.noFolderBackground": "#68217A",
    "statusBar.debuggingBackground": "#CC6633",
    "statusBar.debuggingForeground": "#FFFFFF",
    "statusBarItem.activeBackground": "#FFFFFF33",
    "statusBarItem.hoverBackground": "#FFFFFF22",
    "statusBarItem.prominentBackground": "#103A7E",
    "statusBarItem.prominentHoverBackground": "#2A6FC9",
    "statusBarItem.remoteBackground": "#185ABD",
    "statusBarItem.remoteForeground": "#FFFFFF",
    
    // Title Bar
    "titleBar.activeBackground": "#185ABD",
    "titleBar.activeForeground": "#FFFFFF",
    "titleBar.inactiveBackground": "#2A6FC9",
    "titleBar.inactiveForeground": "#FFFFFFAA",
    "titleBar.border": "#103A7E",
    
    // Menu Bar
    "menubar.selectionForeground": "#FFFFFF",
    "menubar.selectionBackground": "#103A7E",
    "menu.background": "#FFFFFF",
    "menu.foreground": "#333333",
    "menu.selectionBackground": "#185ABD",
    "menu.selectionForeground": "#FFFFFF",
    "menu.separatorBackground": "#E5E5E5",
    "menu.border": "#C8C8C8",
    
    // Notifications
    "notificationCenter.border": "#C8C8C8",
    "notificationCenterHeader.background": "#F3F3F3",
    "notificationCenterHeader.foreground": "#333333",
    "notifications.background": "#FFFFFF",
    "notifications.foreground": "#333333",
    "notifications.border": "#C8C8C8",
    "notificationLink.foreground": "#185ABD",
    
    // Command Palette & Quick Input
    "quickInput.background": "#FFFFFF",
    "quickInput.foreground": "#333333",
    "quickInputTitle.background": "#F3F3F3",
    "quickInputList.focusBackground": "#185ABD",
    "quickInputList.focusForeground": "#FFFFFF",
    "pickerGroup.foreground": "#185ABD",
    "pickerGroup.border": "#C8C8C8",
    
    // Panel (Terminal, Output, Problems)
    "panel.background": "#FFFFFF",
    "panel.border": "#E5E5E5",
    "panelTitle.activeBorder": "#185ABD",
    "panelTitle.activeForeground": "#333333",
    "panelTitle.inactiveForeground": "#666666",
    
    // Terminal
    "terminal.background": "#FFFFFF",
    "terminal.foreground": "#333333",
    "terminal.ansiBlack": "#000000",
    "terminal.ansiRed": "#C50F1F",
    "terminal.ansiGreen": "#13A10E",
    "terminal.ansiYellow": "#C19C00",
    "terminal.ansiBlue": "#185ABD",
    "terminal.ansiMagenta": "#BC05BC",
    "terminal.ansiCyan": "#0598BC",
    "terminal.ansiWhite": "#555555",
    "terminal.ansiBrightBlack": "#666666",
    "terminal.ansiBrightRed": "#E51400",
    "terminal.ansiBrightGreen": "#16C60C",
    "terminal.ansiBrightYellow": "#E5E510",
    "terminal.ansiBrightBlue": "#2A6FC9",
    "terminal.ansiBrightMagenta": "#D670D6",
    "terminal.ansiBrightCyan": "#00B7C3",
    "terminal.ansiBrightWhite": "#333333",
    "terminalCursor.foreground": "#185ABD",
    
    // Git Decoration
    "gitDecoration.addedResourceForeground": "#13A10E",
    "gitDecoration.modifiedResourceForeground": "#C18401",
    "gitDecoration.deletedResourceForeground": "#C50F1F",
    "gitDecoration.untrackedResourceForeground": "#16C60C",
    "gitDecoration.ignoredResourceForeground": "#999999",
    "gitDecoration.conflictingResourceForeground": "#E51400",
    "gitDecoration.submoduleResourceForeground": "#185ABD",
    
    // Minimap
    "minimap.findMatchHighlight": "#185ABDAA",
    "minimap.selectionHighlight": "#ADD6FFAA",
    "minimap.errorHighlight": "#E51400",
    "minimap.warningHighlight": "#C19C00",
    "minimapGutter.addedBackground": "#13A10E",
    "minimapGutter.modifiedBackground": "#C18401",
    "minimapGutter.deletedBackground": "#C50F1F",
    
    // Scrollbar
    "scrollbar.shadow": "#DDDDDD",
    "scrollbarSlider.background": "#64646466",
    "scrollbarSlider.hoverBackground": "#646464AA",
    "scrollbarSlider.activeBackground": "#00000099",
    
    // Breadcrumb
    "breadcrumb.foreground": "#666666",
    "breadcrumb.background": "#FFFFFF",
    "breadcrumb.focusForeground": "#333333",
    "breadcrumb.activeSelectionForeground": "#333333",
    "breadcrumbPicker.background": "#F3F3F3",
    
    // Button
    "button.background": "#185ABD",
    "button.foreground": "#FFFFFF",
    "button.hoverBackground": "#103A7E",
    "button.secondaryBackground": "#E5E5E5",
    "button.secondaryForeground": "#333333",
    "button.secondaryHoverBackground": "#D4D4D4",
    
    // Input
    "input.background": "#FFFFFF",
    "input.border": "#C8C8C8",
    "input.foreground": "#333333",
    "input.placeholderForeground": "#999999",
    "inputOption.activeBackground": "#185ABD66",
    "inputOption.activeBorder": "#185ABD",
    "inputOption.activeForeground": "#333333",
    "inputValidation.errorBackground": "#F2DEDE",
    "inputValidation.errorBorder": "#E51400",
    "inputValidation.warningBackground": "#FCF8E3",
    "inputValidation.warningBorder": "#C19C00",
    "inputValidation.infoBackground": "#D9EDF7",
    "inputValidation.infoBorder": "#0066FF",
    
    // Dropdown
    "dropdown.background": "#FFFFFF",
    "dropdown.border": "#C8C8C8",
    "dropdown.foreground": "#333333",
    "dropdown.listBackground": "#FFFFFF",
    
    // Badge
    "badge.background": "#185ABD",
    "badge.foreground": "#FFFFFF",
    
    // Progress Bar
    "progressBar.background": "#185ABD",
    
    // Settings
    "settings.headerForeground": "#333333",
    "settings.modifiedItemIndicator": "#185ABD",
    "settings.focusedRowBackground": "#C5D4E833",
    
    // Debug
    "debugToolBar.background": "#F3F3F3",
    "debugExceptionWidget.background": "#F2DEDE",
    "debugExceptionWidget.border": "#E51400",
    
    // Welcome Page
    "welcomePage.background": "#FFFFFF",
    "welcomePage.tileBackground": "#F3F3F3",
    "welcomePage.progress.background": "#C8C8C8",
    "welcomePage.progress.foreground": "#185ABD",
    "walkThrough.embeddedEditorBackground": "#F3F3F3",
    
    // Bracket Pair Colorization
    "editorBracketHighlight.foreground1": "#185ABD",
    "editorBracketHighlight.foreground2": "#8B008B",
    "editorBracketHighlight.foreground3": "#B8860B",
    "editorBracketHighlight.foreground4": "#008B8B",
    "editorBracketHighlight.foreground5": "#DC143C",
    "editorBracketHighlight.foreground6": "#6A5ACD"
  },
  "tokenColors": [
    // Comments
    {
      "name": "Comment",
      "scope": [
        "comment",
        "punctuation.definition.comment"
      ],
      "settings": {
        "foreground": "#008000",
        "fontStyle": "italic"
      }
    },
    // Strings
    {
      "name": "String",
      "scope": [
        "string",
        "string.quoted",
        "string.template"
      ],
      "settings": {
        "foreground": "#A31515"
      }
    },
    // Numbers
    {
      "name": "Number",
      "scope": [
        "constant.numeric",
        "constant.numeric.integer",
        "constant.numeric.float",
        "constant.numeric.hex"
      ],
      "settings": {
        "foreground": "#098658"
      }
    },
    // Constants
    {
      "name": "Constant",
      "scope": [
        "constant",
        "constant.language",
        "constant.character"
      ],
      "settings": {
        "foreground": "#0451A5"
      }
    },
    // Keywords
    {
      "name": "Keyword",
      "scope": [
        "keyword",
        "keyword.control",
        "keyword.operator.new",
        "keyword.operator.expression",
        "keyword.operator.logical",
        "keyword.other"
      ],
      "settings": {
        "foreground": "#AF00DB"
      }
    },
    // Storage (function, class, var, let, const, etc)
    {
      "name": "Storage",
      "scope": [
        "storage",
        "storage.type",
        "storage.modifier"
      ],
      "settings": {
        "foreground": "#0000FF"
      }
    },
    // Function names
    {
      "name": "Function",
      "scope": [
        "entity.name.function",
        "meta.function-call",
        "support.function"
      ],
      "settings": {
        "foreground": "#795E26"
      }
    },
    // Classes & Types
    {
      "name": "Class & Type",
      "scope": [
        "entity.name.class",
        "entity.name.type",
        "entity.other.inherited-class",
        "support.class",
        "support.type"
      ],
      "settings": {
        "foreground": "#267F99"
      }
    },
    // Variables
    {
      "name": "Variable",
      "scope": [
        "variable",
        "variable.other"
      ],
      "settings": {
        "foreground": "#001080"
      }
    },
    // Variable - Parameter
    {
      "name": "Parameter",
      "scope": [
        "variable.parameter",
        "meta.parameter"
      ],
      "settings": {
        "foreground": "#001080"
      }
    },
    // Property
    {
      "name": "Property",
      "scope": [
        "variable.other.property",
        "variable.other.object.property",
        "support.variable.property",
        "meta.object-literal.key"
      ],
      "settings": {
        "foreground": "#001080"
      }
    },
    // Operators
    {
      "name": "Operator",
      "scope": [
        "keyword.operator",
        "keyword.operator.assignment",
        "keyword.operator.arithmetic",
        "keyword.operator.comparison"
      ],
      "settings": {
        "foreground": "#000000"
      }
    },
    // Punctuation
    {
      "name": "Punctuation",
      "scope": [
        "punctuation",
        "punctuation.definition",
        "punctuation.separator",
        "punctuation.terminator"
      ],
      "settings": {
        "foreground": "#000000"
      }
    },
    // Tags (HTML/JSX)
    {
      "name": "Tag",
      "scope": [
        "entity.name.tag",
        "punctuation.definition.tag"
      ],
      "settings": {
        "foreground": "#800000"
      }
    },
    // Attributes
    {
      "name": "Attribute",
      "scope": [
        "entity.other.attribute-name"
      ],
      "settings": {
        "foreground": "#E50000"
      }
    },
    // CSS Selectors
    {
      "name": "CSS Selector",
      "scope": [
        "entity.other.attribute-name.class.css",
        "entity.other.attribute-name.id.css"
      ],
      "settings": {
        "foreground": "#800000"
      }
    },
    // CSS Property Names
    {
      "name": "CSS Property",
      "scope": [
        "support.type.property-name.css"
      ],
      "settings": {
        "foreground": "#E50000"
      }
    },
    // CSS Values
    {
      "name": "CSS Value",
      "scope": [
        "support.constant.property-value.css"
      ],
      "settings": {
        "foreground": "#0451A5"
      }
    },
    // Regular Expressions
    {
      "name": "RegExp",
      "scope": [
        "string.regexp"
      ],
      "settings": {
        "foreground": "#811F3F"
      }
    },
    // Escape Characters
    {
      "name": "Escape Character",
      "scope": [
        "constant.character.escape"
      ],
      "settings": {
        "foreground": "#EE0000"
      }
    },
    // Markdown
    {
      "name": "Markdown Heading",
      "scope": [
        "markup.heading",
        "entity.name.section.markdown"
      ],
      "settings": {
        "foreground": "#185ABD",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Markdown Bold",
      "scope": [
        "markup.bold"
      ],
      "settings": {
        "foreground": "#0000FF",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Markdown Italic",
      "scope": [
        "markup.italic"
      ],
      "settings": {
        "foreground": "#AF00DB",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Markdown Link",
      "scope": [
        "markup.underline.link"
      ],
      "settings": {
        "foreground": "#185ABD"
      }
    },
    {
      "name": "Markdown Code",
      "scope": [
        "markup.inline.raw",
        "markup.fenced_code.block"
      ],
      "settings": {
        "foreground": "#A31515"
      }
    },
    // JSON
    {
      "name": "JSON Key",
      "scope": [
        "support.type.property-name.json"
      ],
      "settings": {
        "foreground": "#0451A5"
      }
    },
    {
      "name": "JSON Value String",
      "scope": [
        "string.quoted.double.json"
      ],
      "settings": {
        "foreground": "#A31515"
      }
    },
    // Python specific
    {
      "name": "Python Self",
      "scope": [
        "variable.language.self.python",
        "variable.parameter.function.language.special.self.python"
      ],
      "settings": {
        "foreground": "#001080",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Python Decorator",
      "scope": [
        "entity.name.function.decorator.python",
        "meta.function.decorator.python"
      ],
      "settings": {
        "foreground": "#795E26",
        "fontStyle": "italic"
      }
    },
    // TypeScript/JavaScript specific
    {
      "name": "TS Interface",
      "scope": [
        "entity.name.type.interface"
      ],
      "settings": {
        "foreground": "#267F99"
      }
    },
    {
      "name": "TS Enum",
      "scope": [
        "entity.name.type.enum"
      ],
      "settings": {
        "foreground": "#267F99"
      }
    },
    // Invalid
    {
      "name": "Invalid",
      "scope": [
        "invalid",
        "invalid.illegal"
      ],
      "settings": {
        "foreground": "#E51400"
      }
    },
    // Deprecated
    {
      "name": "Deprecated",
      "scope": [
        "invalid.deprecated"
      ],
      "settings": {
        "foreground": "#333333",
        "fontStyle": "strikethrough"
      }
    }
  ],
  "semanticHighlighting": true,
  "semanticTokenColors": {
    "namespace": "#267F99",
    "class": "#267F99",
    "enum": "#267F99",
    "interface": "#267F99",
    "struct": "#267F99",
    "typeParameter": "#267F99",
    "type": "#267F99",
    "parameter": "#001080",
    "variable": "#001080",
    "property": "#001080",
    "enumMember": "#0451A5",
    "function": "#795E26",
    "method": "#795E26",
    "macro": "#795E26",
    "keyword": "#AF00DB",
    "comment": {
      "foreground": "#008000",
      "fontStyle": "italic"
    },
    "string": "#A31515",
    "number": "#098658",
    "regexp": "#811F3F",
    "operator": "#000000"
  }
}
